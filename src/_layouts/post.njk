---
layout: base.njk
---

<article class="blog-post">
    <div class="page-container">
        <header class="post-header">
            <h1>{{ title }}</h1>
            <div class="post-meta">
                <time datetime="{{ date | htmlDateString }}">{{ date | dateFormat }}</time>
                {% if tags %}
                <div class="post-tags">
                    {% for tag in tags %}
                        {% if tag != "posts" %}
                        <span class="tag">{{ tag }}</span>
                        {% endif %}
                    {% endfor %}
                </div>
                {% endif %}
            </div>
        </header>
        
        <div class="post-content">
            {{ content | safe }}
        </div>
        
        <footer class="post-footer">
            <a href="/blog" class="back-to-blog">‚Üê Back to Blog</a>
        </footer>
    </div>
</article> 
